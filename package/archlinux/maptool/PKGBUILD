# Maintainer: Your Name <youremail@domain.com>
pkgname=MapTool
pkgver=${MAPTOOL_VERSION//-/_}
#pkgver=1.8.0_beta.2
pkgrel=1
pkgdesc="Virtual Tabletop for playing roleplaying games."
arch=(x86_64)
url="https://github.com/RPTools/maptool"
license=('AGPL3')
source=("release/maptool-${pkgver//_/-}-$arch.rpm")
#source=("https://github.com/RPTools/maptool/releases/download/${pkgver//_/-}/maptool-${pkgver//_/-}-$arch.rpm")
md5sums=(SKIP)

package() {
    cp -r opt/ "$pkgdir/"
}

post_install() {
    xdg-desktop-menu install /opt/maptool/lib/maptool-MapTool.desktop
    xdg-mime install /opt/maptool/lib/maptool-MapTool-MimeInfo.xml
}

pre_remove() {
    xdg-desktop-menu uninstall /opt/maptool/lib/maptool-MapTool.desktop
    xdg-mime uninstall /opt/maptool/lib/maptool-MapTool-MimeInfo.xml
    uninstall_default_mime_handler maptool-MapTool.desktop application/zip
}
